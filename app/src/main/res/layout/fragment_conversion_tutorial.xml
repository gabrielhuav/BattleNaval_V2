<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ConversionTutorialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTutorialTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:text="Aprende Conversiones Binarias"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvTutorialSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="#303F9F"
            android:text="¡Entender las conversiones binarias te ayudará a encontrar los barcos enemigos!"
            android:layout_marginBottom="16dp" />

        <!-- Contenedor para el ejemplo específico -->
        <LinearLayout
            android:id="@+id/exampleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#E8EAF6"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvExampleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Ejemplo de Conversión"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvExampleContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="[Aquí aparecerá el ejemplo específico]" />

        </LinearLayout>

        <!-- Sección de conversión binaria a decimal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#303F9F"
            android:text="Conversión de Binario a Decimal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Cada dígito en un número binario representa una potencia de 2, comenzando desde la derecha con 2^0 (1), luego 2^1 (2), 2^2 (4), etc."
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginBottom="16dp">

            <TableRow
                android:background="#C5CAE9">
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Posición"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^7"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^6"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^5"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^4"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^3"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^2"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^1"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2^0"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Valor"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="128" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="64" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="32" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="16" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="8" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="4" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="2" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="1" />
            </TableRow>
        </TableLayout>

        <!-- Sección de conversión ASCII -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#303F9F"
            android:text="Códigos ASCII para Letras A-G"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Cada letra tiene un valor numérico en código ASCII. Para las letras A-G:"
            android:layout_marginBottom="8dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginBottom="16dp">

            <TableRow
                android:background="#C5CAE9">
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Letra"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Decimal"
                    android:textStyle="bold" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="Binario"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="A" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="65" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000001" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="B" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="66" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000010" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="C" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="67" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000011" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="D" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="68" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000100" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="E" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="69" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000101" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="F" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="70" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000110" />
            </TableRow>

            <TableRow>
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="G" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="71" />
                <TextView
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="01000111" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Entendido! Volver al Juego"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>