<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué es un sistema de numeración?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/contentTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido primera parte..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/illustrationImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sistema_decimal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/contentTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contenido segunda parte..."
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>