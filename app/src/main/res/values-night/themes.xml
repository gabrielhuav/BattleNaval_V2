<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BattleNaval_V2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema UNAM (Guinda) en modo nocturno -->
    <style name="Theme.BattleNaval_V2.UNAM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/unam_primary</item>
        <item name="colorPrimaryVariant">@color/unam_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/unam_accent</item>
        <item name="colorSecondaryVariant">@color/unam_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <item name="colorOnBackground">#E1E1E1</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="buttonStyle">@style/Button.UNAM.Night</item>
    </style>

    <!-- Tema IPN (Guinda) en modo nocturno -->
    <style name="Theme.BattleNaval_V2.IPN" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/ipn_primary</item>
        <item name="colorPrimaryVariant">@color/ipn_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ipn_accent</item>
        <item name="colorSecondaryVariant">@color/ipn_primary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <item name="colorOnBackground">#E1E1E1</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="buttonStyle">@style/Button.IPN.Night</item>
    </style>

    <!-- Estilos adicionales para botones UNAM en modo nocturno -->
    <style name="Button.UNAM.Night" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/unam_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/unam_accent</item>
    </style>

    <!-- Estilos adicionales para botones IPN en modo nocturno -->
    <style name="Button.IPN.Night" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/ipn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/ipn_accent</item>
    </style>

    <!-- Alias para mantener compatibilidad con cÃ³digo existente -->
    <style name="Theme.BattleNaval_V2.Guinda" parent="Theme.BattleNaval_V2.UNAM" />
    <style name="Theme.BattleNaval_V2.Escom" parent="Theme.BattleNaval_V2.IPN" />

    <!-- Alias para nombres de temas en Exam1 (si es necesario) -->
    <style name="Theme.Exam1.Guinda" parent="Theme.BattleNaval_V2.UNAM" />
    <style name="Theme.Exam1.Escom" parent="Theme.BattleNaval_V2.IPN" />
</resources>